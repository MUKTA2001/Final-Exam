<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintlayout"
        android:layout_marginTop="20dp">

        <!-- Header Text -->
        <TextView
            android:id="@+id/notesHeader"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Notes"
            android:textColor="#8692f7"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Row 1 with Notes Cards -->
        <LinearLayout
            android:id="@+id/row1"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notesHeader">

            <!-- First Note Card (Math) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mathCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mathTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Math"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/mathImage"
                        android:layout_width="700dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/mathTitle"
                        android:src="@drawable/mathnotes"
                        android:layout_marginTop="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Note Card (Science) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/scienceCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/scienceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Science"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/scienceImage"
                        android:layout_width="700dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/scienceTitle"
                        android:src="@drawable/sciencen"
                        android:layout_marginTop="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Row 2 with Notes Cards -->
        <LinearLayout
            android:id="@+id/row2"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row1">

            <!-- Third Note Card (History) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/historyCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/historyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/historyImage"
                        android:layout_width="700dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/historyTitle"
                        android:src="@drawable/history_icon"
                        android:layout_marginTop="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fourth Note Card (English) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/englishCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/englishTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        android:textColor="@color/lavender"
                        android:textSize="20sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/englishImage"
                        android:layout_width="700dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/englishTitle"
                        android:src="@drawable/english_icon"
                        android:layout_marginTop="10dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

